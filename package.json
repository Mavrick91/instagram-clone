{
  "name": "instagram-clone",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "check": "tsc --noEmit",
    "seed": "ts-node prisma/seed.js",
    "clear-s3": "node script/clearS3Bucket.js",
    "drop-db": "PGPASSWORD=postgres psql -h localhost -U postgres -c \"DROP DATABASE IF EXISTS \\\"instagram-clone\\\"\"",
    "create-db": "PGPASSWORD=postgres psql -h localhost -U postgres -c \"CREATE DATABASE \\\"instagram-clone\\\"\"",
    "migrate": "cd backend && bunx prisma migrate dev --name init",
    "reset": "bun run drop-db && bun run create-db && bun run clear-s3 && prisma db push && bun run seed"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "@graphql-codegen/typescript-graphql-files-modules": "^3.0.0",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "5.15.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@tanstack/react-query": "^5.45.0",
    "@tanstack/react-query-devtools": "^5.45.0",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "framer-motion": "^11.2.10",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.16.0",
    "immer": "^10.0.4",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "localforage": "^1.10.0",
    "lucide-react": "^0.395.0",
    "match-sorter": "^6.3.4",
    "moment": "^2.30.1",
    "next": "^14.2.4",
    "prisma": "^5.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.2",
    "react-router-dom": "^6.22.3",
    "react-spinners": "^0.13.8",
    "react-textarea-autosize": "^8.5.3",
    "react-toastify": "^10.0.5",
    "sass": "^1.77.5",
    "serve": "^14.2.1",
    "sharp": "^0.33.4",
    "sort-by": "^1.2.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-operations": "^4.2.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
